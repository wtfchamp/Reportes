                        Solo modificar los valores iniciando 20 como 0%
                        y 366.5 como 100%
    Origin    d="M20,5 20,5 A1,1 0 1 1 20,35 L20,35 A1,1 0 1 1 20,5 z"
  -->
    <path d="M20,0 62.5,0 A1,1 0 1 1 62.5,40 L20,40 A1,1 0 1 1 20,0 z" fill="#fff" filter="url(#insetShadow)" id="container" stroke="#CCC" stroke-width="0"/>
    <path d="M20,5 62.5,5 A1,1 0 1 1 62.5,35 L20,35 A1,1 0 1 1 20,5 z" fill="url(#progressGradient)" id="bar"/>
