<?xml version="1.0" encoding="UTF-8" standalone="no"?><svg xmlns="http://www.w3.org/2000/svg" height="100" viewBox="0 0 82.5 40" width="100">
  <defs>
    <linearGradient gradientUnits="userSpaceOnUse" id="progressGradient" x1="0%" x2="100%" y1="0%" y2="0%">
      <stop offset="0" stop-color="#376EA6"/>
      <stop offset="0.5" stop-color="#8233A4"/>
      <stop offset="1" stop-color="#B34646"/>
    </linearGradient>

    <filter filterUnits="userSpaceOnUse" id="insetShadow" x1="0%" x2="100%" y1="0%" y2="0%">
        <feFlood flood-color="#000" flood-opacity="1"/>
        <feComposite in2="SourceGraphic" operator="xor"/>
        <feGaussianBlur stdDeviation="2"/>
        <feOffset dx="0" dy="0" result="offsetblur"/>
        <feFlood flood-color="#000" flood-opacity="1"/>
        <feComposite in2="offsetblur" operator="atop"/>
        <feComposite in2="SourceGraphic" operator="in"/>
        <feMerge>
            <feMergeNode in="SourceGraphic"/>
            <feMergeNode/>
        </feMerge>
    </filter>
  </defs>
  <!--Modificar solo dos valores del progressBar.svg 
